{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "esnext",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "build/lib",
        "outDir": "build/ts",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "strict": true,
        "paths": {
            "#mod/main.wasm": ["./build/mod/logicx_bg.wasm"],
            "#mod/util.js": ["./build/mod/logicx_bg.js"],
            "logicx/logicx_bg.js": ["./build/logicx_d.ts"],
            "logicx/logicx_bg.wasm": ["./wasm.d.ts"]
        }
    },
    "exclude": [
        "build"
    ],
}
